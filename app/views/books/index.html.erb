<p id="notice"><%= notice %></p>

<h2>All Books</h2>
<% if @books.empty? %>
   <b>No items in store</b>
<% else %>

    <table class="table table-striped">
      <thead>
        <tr>
           <th>Books name</th>
            <th></th>
            <th></th>
           <th>Groups</th>
          <th colspan="3"></th>
        </tr>
     </thead>

      <tbody>
        <% @books.each do |book| %>
          <tr>
            <td><%= book.name %></td>
            <td><%= image_tag book.avatar.url, width: '70px', height: '70px' %></td>
            <td><%= link_to 'Book details', book, :class => 'btn btn-warning' %></td>
             <% book.groups.each do |gr| %>
               <td><%= gr.name %></td>
             <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
 <% end %>
<br>
