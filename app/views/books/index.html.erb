<p id="notice"><%= notice %></p>

<h2>All Books</h2>
<% if @books.empty? %>
   <b>No items in store</b>
<% else %>

    <table class="table table-striped">
      <thead>
        <tr>
           <th>Books name</th>
          <th colspan="3"></th>
        </tr>
     </thead>

      <tbody>
        <% @books.each do |book| %>
          <tr>
            <td><%= book.name %></td>
            <td><%= link_to 'Show', book %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
 <% end %>
<br>
